# AWS Billing Alert Terraform Configuration Example
# Copy this file to terraform.tfvars and customize for your environment

# AWS Region where resources will be deployed
aws_region = "us-east-1"

# Billing thresholds in USD (creates alarms for each threshold)
alert_thresholds = [100, 150, 200]

# Email addresses to receive billing alerts
email_endpoints = [
  "your-email@example.com",
  "team@example.com"
]

# Currency for billing alerts
currency = "USD"

# Environment tag for resource identification
environment_tag = "Production"

# Automatically confirm SNS email subscriptions (use only for testing)
auto_confirm_subscription = false

# SNS topic name
sns_topic_name = "billing-alert"
